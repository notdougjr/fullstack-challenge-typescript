{
  "name": "Templo Monorepo",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace/templo",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "postCreateCommand": "sudo mkdir -p /usr/local/share/pnpm && sudo chown -R node:node /usr/local/share/pnpm && sudo corepack enable && sudo corepack prepare pnpm@10.26.0 --activate && sudo chown -R node:node /usr/local/share/pnpm && sudo chown -R node:node /workspace/templo && sudo rm -rf /workspace/templo/node_modules 2>/dev/null || true && cd /workspace/templo && pnpm install --force",

  "remoteEnv": {
    "PNPM_HOME": "/usr/local/share/pnpm",
    "PATH": "${containerEnv:PATH}:/usr/local/share/pnpm",
    "DB_HOST": "postgres",
    "DB_PORT": "5432",
    "DB_USERNAME": "postgres",
    "DB_PASSWORD": "postgres",
    "DB_DATABASE": "postgres"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "orta.vscode-jest",
        "firsttris.vscode-jest-runner"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        "files.exclude": {
          "**/.git": true,
          "**/.DS_Store": true,
          "**/node_modules": true,
          "**/dist": true,
          "**/.next": true
        }
      }
    }
  },

  "forwardPorts": [3000, 3001, 5432],
  "portsAttributes": {
    "3000": {
      "label": "Frontend (Next.js)",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Backend (NestJS)",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "ignore"
    }
  },

  "postStartCommand": "pnpm --version && node --version",

  "remoteUser": "node"
}
